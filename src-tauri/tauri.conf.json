{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Audio Replacer",
  "version": "5.0.1",
  "identifier": "org.lemon-studios.audio-replacer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "audio-replacer",
        "title": "Audio Replacer",
        "width": 1200,
        "minWidth": 1200,
        "height": 900,
        "minHeight": 900
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "copyright": "Lemon Studios",
    "publisher": "Lemon Studios",
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["deb", "rpm", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "binaries/whisper.bin",
      "binaries/noiseSuppression.rnnn",
      "resources/releaseData.md",
      "resources/data.json"
    ],
    "externalBin": [
      "binaries/ffmpeg"
    ],
    "linux": {
      "deb": {
        "files": {}
      }
    },
    "windows": {
      "allowDowngrades": false,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": {
        "compression": "lzma",
        "installMode": "currentUser",
        "startMenuFolder": "LemonStudios",
        "installerIcon": "icons/icon.ico"
      },
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      }
    },
    "license": "BSD-3-Clause",
    "category": "Utility"
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEIwRTUwNjdGMDk0NDdCMkUKUldRdWUwUUpmd2Jsc0x1MEhsTmVPRlh1WGdzRlN3M28zMzF2QnA3RXVHZmdHZmZ4SFI5RzZpdzYK",
      "endpoints": [
        "https://github.com/lemons-studios/audio-replacer/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
