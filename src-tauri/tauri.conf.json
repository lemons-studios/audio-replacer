{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Audio Replacer",
  "version": "5.0.0",
  "identifier": "org.lemon-studios.audio-replacer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "audio-replacer",
        "title": "Audio Replacer",
        "width": 1265,
        "minWidth": 1265,
        "height": 875,
        "minHeight": 875,
        "decorations": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },

  "bundle": {
    "copyright": "Lemon Studios",
    "publisher": "Lemon Studios",
    "active": true,
    "targets": ["deb", "nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "binaries/whisper.bin",
      "binaries/noiseSuppression.rnnn",
      "resources/releaseData.md",
      "resources/data.json"
    ],
    "externalBin": [
      "binaries/ffmpeg"
    ],
    "linux": {
      "deb": {
        "files": {}
      }
    },
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": {
        "compression": "lzma",
        "installMode": "currentUser",
        "startMenuFolder": "LemonStudios",
        "installerIcon": "icons/icon.ico"
      },
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      }
    },
    "license": "BSD-3-Clause",
    "category": "Utility"
  }
}
