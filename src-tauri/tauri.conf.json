{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "audio-replacer",
  "version": "5.0.0",
  "identifier": "org.lemon-studios.audio-replacer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Audio Replacer",
        "width": 1200,
        "minWidth": 1200,
        "height": 750,
        "minHeight": 750,
        "decorations": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "."
        ]
      }
    }
  },
  
  "bundle": {
    "copyright": "Lemon Studios",
    "publisher": "Lemon Studios",
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "binaries/whisper.bin",
      "binaries/noiseSuppression.rnnn",
      "resources/settings.json",
      "resources/effectData.json",
      "resources/pitchData.json",
      "resources/releaseData.md"
    ],
    "externalBin": [
      "binaries/ffmpeg"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      },
      "deb": {
        "files": {}
      }
    },
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": {
        "compression": "lzma",
        "installMode": "both",
        "startMenuFolder": "LemonStudios"
      },
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      }
    },
    "license": "BSD-3-Clause",
    "category": "Utility"
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY4OThGMUMxMThGOEJBNUYKUldSZnV2Z1l3ZkdZK1A0R2VVS0Jmck1tbFpGeVNERERaMW9ZdGRlaXFmSEtPTWlKTXFETVdJMU8K",
      "endpoints": [
        "https://github.com/lemons-studios/audio-replacer/releases/latest"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}