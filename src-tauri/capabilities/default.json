{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "whisper.bin",
          "sidecar": true
        },
        {
          "name": "binaries/ffmpeg",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        "**"
      ]
    },

    "core:window:default",
    "core:window:allow-start-dragging",
    "core:app:allow-set-app-theme",
    "dialog:default",
    "drpc:default",
    "drpc:allow-clear-activity",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister-all",
    "fs:default",
    "fs:allow-resource-read-recursive",
    "fs:read-all",
    "fs:write-all",
    "log:default",
    "opener:default",
    "os:default",
    "process:default",
    "shell:default",
    "shell:allow-open",
    "upload:default"
  ]
}